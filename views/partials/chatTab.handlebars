<div class="tab-pane fade" id="chat" role="tabpanel" aria-labelledby="chat-tab">
    <div class="row" id="message-screen">
        {{!-- Messages will append here when submitted from any users. --}}
    </div>
    <div class="row" id="message-input">
        <div class="input-group mb-0 fixed-row-bottom">
            <div class="input-group-prepend">
                <button class="btn btn-info" type="button" id="chat-button" style="border: 1px solid #303e4d;"><i class="far fa-paper-plane"></i></button>
            </div>
            <input type="text" class="form-control" placeholder="Type your message here..." style="border: 1px solid #303e4d;"
                id="chat-message-area">
        </div>
    </div>
</div>