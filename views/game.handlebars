<div class="container-fluid" style="height: 100vh; width: 100%;">
    <div class="row" style="height: 100vh;">
        <div class="col-4" style="height: 100vh;">
            <div class="row" style="height: 100vh;">
                <div class="col-4 slacker">
                    {{> slackerMenu}}
                </div>
                <div class="col-8">
                    <div class="tab-content">
                        {{> inventoryTab}}
                        {{> statsTab}}
                        {{> chatTab}}
                        {{> helpTab}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8" id="main" style="height: 100vh;">
            <div class="row" id="game-area">
                <div class="col-12" id="game-background-div">
                    <img src="/images/home.jpg" id="game-background">
                </div>
            </div>
            <div class="row" style="height: 40vh">
                <div class="col-12" id="terminal">
                </div>
                <div id='test'></div>
            </div>
        </div>
    </div>
</div>


